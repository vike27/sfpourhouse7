<div class="contact-us-form">
  <%= form_for @message, :html => { :role => 'form'}, :url => contacts_path do |form| %>
    <div class="form-inputs">

      <div class= "form-group">
        <%= form.label :name, class: "labels-contact" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      
      <div class= "form-group">
        <%= form.label :email, class: "labels-contact" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class= "form-group">
        <%= form.label :desired_date, class: "labels-contact" %>
        <%= form.date_field :date, class: "form-control" %>
      </div>

      <div class= "form-group">
        <%= form.label :number_of_people, class: "labels-contact" %>
        <%= form.number_field :number_of_people, class: "form-control" %>
      </div>

      <div class= "form-group">
        <%= form.label :type_of_event, class: "labels-contact" %>
        <%= form.text_field :type, class: "form-control" %>
      </div>
      
      <div class= "form-group">
        <%= form.label :details, class: "labels-contact" %>
        <%= form.text_area :body, class: "form-control", id: "body-text" %>
      </div>

    </div>
    </br>
    <div class="form-actions">
      <%= form.button 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>
